<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="8dp"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/ItemTxtVw"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/long_btn"
        android:clickable="true"
        android:paddingBottom="10dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="10dp"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/MoreInfoBtn"
        app:layout_constraintEnd_toStartOf="@+id/MoreInfoBtn"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/MoreInfoBtn"
        android:layout_width="38dp"
        android:layout_height="40dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text=">"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ItemTxtVw"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>