<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/ResultTxtVw"
        android:layout_width="265dp"
        android:maxWidth="265dp"
        android:maxLines="1"
        android:layout_height="wrap_content"
        android:background="@drawable/long_btn"
        android:paddingBottom="10dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="10dp"
        android:text=""
        android:textSize="24sp"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/AddBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@drawable/add_to_list_btn"
        android:text=""
        tools:layout_editor_absoluteX="275dp"
        tools:layout_editor_absoluteY="2dp" />

    <Button
        android:id="@+id/MoreInfoBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@drawable/more_info_btn"
        android:text=""
        tools:layout_editor_absoluteX="333dp"
        tools:layout_editor_absoluteY="2dp" />

</LinearLayout>