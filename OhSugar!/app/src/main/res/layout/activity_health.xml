<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".WelcomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_top"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/gradient_background"
            android:minHeight="?attr/actionBarSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/toolbar_title"
                android:paddingTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="health"
                android:textColor="#ffffff"
                android:textSize="25sp" />


        </android.support.v7.widget.Toolbar>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mask_gradient"
            android:layout_gravity="bottom">


        </FrameLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/graph"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/graph" />

            <ImageView
                android:id="@+id/arrow"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignBottom="@+id/graph"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="21dp"
                app:srcCompat="@drawable/ic_arrow_back_black_24dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/RecSugarTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rec Sugar:"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/ListSugarTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="List Sugar:"
            android:textSize="30sp" />


    </LinearLayout>




</android.support.constraint.ConstraintLayout>