<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.graysonorr.ohsugar">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".WelcomeActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".HelpActivity" />
        <activity android:name=".ShoppingListActivity" />
        <activity android:name=".CompareActivity" />
        <activity android:name=".MoreInfoActivity" />
        <activity
            android:name=".BarcodeScanner"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_barcode_scanner"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen"
            android:theme="@style/FullscreenTheme" />
        <activity android:name=".BarcodeRetrieval" />
        <activity android:name=".ConversionsActivity" />
        <activity android:name=".SearchActivity" />
        <activity android:name=".HealthActivity" />
        <activity android:name=".BasicSugarContent" />
        <activity android:name=".SearchReturn" />
        <activity android:name=".BasicSugarContentReturn"></activity>
    </application>

</manifest>